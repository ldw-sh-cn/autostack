#!/bin/sh
####OS版本信息查看
cat /proc/version
####命令运行路径
BASE_DIR="/auto"
####操作系统名称
OS=rhel
####操作系统版本
OS_VERSION=6
####GLIBC库安装开关
GLIBC=false
####READLINE库安装开关
READLINE=true
####GCC库安装开关
GCC=true
####JDK安装开关
JDK=true
####TOMCAT安装开关
TOMCAT=true
####REDIS安装开关
REDIS=true
####PG安装开关
PG=true
####JAVA设置
JAVA_VERSION="jdk1.7.0_80"
JAVA_BASE_DIR="/usr/local/java"
JAVA_HOME="$JAVA_BASE_DIR/$JAVA_VERSION"
####TOMCAT设置
CATALINA_VERSION="apache-tomcat-7.0.81"
CATALINA_HOME="/usr/local/tomcat7"
####REDIS设置
REDIS_VERSION="redis-3.2.11"
REDIS_HOME="/usr/local/redis"
####REDIS密码
REDIS_PWD=""
####PG安装设置
PG_VERSION="postgresql-9.5.9"
PG_HOME="/usr/local/pgsql"
PG_DATA_DIR="/usr/local/pgsql/data"
PG_LOG_DIR="/usr/local/pgsql/log"
####postgres密码
DB_POSTGRES_PWD=""
####数据库列表
DB_LIST=()
####数据库用户列表
DB_USER_LIST=()
####密码列表
DB_PWD_LIST=()
####升级SQL脚本
DB_SQL_LIST=()
####JDK安装包
JDK_TAR_GZ="jdk-7u80-linux-x64.tar.gz"
####TOMCAT安装包
TOMCAT_TAR_GZ="apache-tomcat-7.0.81.tar.gz"
####REDIS安装包
REDIS_TAR_GZ="redis-3.2.11.tar.gz"
####PG安装包
PG_TAR_GZ="postgresql-9.5.9.tar.gz"